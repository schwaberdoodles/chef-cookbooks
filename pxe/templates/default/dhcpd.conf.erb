ddns-update-style none;
default-lease-time 600;
option domain-name-servers <%= @node[:pxe][:dhcp][:dns_server] %>;
max-lease-time 7200;
allow booting;
allow bootp;
class "pxeclients" {
  match if substring(option vendor-class-identifier, 0, 9) = "PXEClient";
  next-server <%= @node[:pxe][:dhcp][:next_server] %>;
  filename = "<%= @node[:pxe][:dhcp][:filename] %>";

}

subnet <%= @node[:pxe][:dhcp][:subnet] %> netmask <%= @node[:pxe][:dhcp][:subnet_mask] %> {
  pool {
    allow members of "pxeclients";
    range <%= @node[:pxe][:dhcp][:host_range] %>;
  }
}


<% @hosts.each do |host| -%>
host <%= host['id'] %> {
       hardware ethernet <%= host['mac_address'] %>;
       fixed-address <%= host['ip'] %>;
       option routers <%= host['gateway'] %>;
       option subnet-mask <%= host['mask'] %>;
       option broadcast-address <%= host['broadcast'] %>;
       option host-name "<%= host['host_name'] %>";
}
<% end -%>