ddns-update-style none;
default-lease-time 600;
option domain-name-servers <%= @node[:pxe][:dhcp][:dns_server] %>;
max-lease-time 7200;
allow booting;
allow bootp;
class "pxeclients" {
  match if substring(option vendor-class-identifier, 0, 9) = "PXEClient";
  next-server <%= @node[:pxe][:dhcp][:next_server] %>;
  filename = "pxelinux.0";

}

subnet <%= @node[:pxe][:dhcp][:subnet] %> netmask <%= @node[:pxe][:dhcp][:subnet_mask] %> {
  pool {
    allow members of "pxeclients";
    range <%= @node[:pxe][:dhcp][:host_range] %>;
  }
}

host labesxivdi01 {
        hardware ethernet 00:25:B5:00:00:7F;
        fixed-address 10.10.143.2;
        option routers 10.10.143.1;
        option subnet-mask 255.255.255.0;
        option broadcast-address 10.10.143.255;
        option host-name "labesxivdi01.dc1.velankani.net";
}
